	date = {2022},
	note = {Publisher: Association for Computing Machinery, Inc},
	keywords = {'current, Availability, Cybersecurity, Design systems, Enterprise networks, Industrial control systems, Industrial vulnerability, Intelligent control, Life cycle, Network security, Pressure vessels, Security features, Security gap, Security issues, Security systems, Security-by-design, System testing, reviewed},
}

