	shortjournal = {{COMPUTERS} {IN} {INDUSTRY}},
	author = {{Suhail, Sabah and Malik, Saif Ur Rehman and Jurdak, Raja and Hussain,Rasheed and Matulevicius, Raimundas and Svetinovic, Davor}},
