	keywords = {Analytical results, Attack strategies, Critical applications, Cyber Physical System, Cyber physical systems ({CPSs}), Defense strategy, Digital twin, Embedded systems, Game theory, Game-theoretic, Network security, Physical systems, Signaling game, State estimation, reviewed},
}

