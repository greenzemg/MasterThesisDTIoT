	author = {{Holmes, David and Papathanasaki, Maria and Maglaras, Leandros and Ferrag, Mohamed Amine and Nepal, Surya and Janicke, Helge}},
	date = {2021},
	note = {Publisher: Institute of Electrical and Electronics Engineers Inc.},
	keywords = {Analysis/design, Automotive industry, Cyber security, Cybersecurity, Design evolution, Design optimization, Efficiency, Embedded systems, Factories of the futures, Improve speed, Industry 4.0, Security challenges, Security solutions, Speed accuracy, Traditional engineerings, reviewed},
}

@article{xuEfficientAuthenticationVehicular2021,
